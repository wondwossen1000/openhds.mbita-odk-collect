<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:padding="10dip">
  
   <TextView 
    	android:id="@+id/textView0" 
    	android:text="Search for Individuals" 
    	android:textAppearance="?android:attr/textAppearanceSmall" 
    	android:layout_height="wrap_content" 
    	android:layout_marginBottom="15dip"
    	android:layout_width="wrap_content" />
  
    <TextView 
    	android:id="@+id/textView1" 
    	android:text="Search by First Name:" 
    	android:textAppearance="?android:attr/textAppearanceSmall" 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" />
    
    <EditText 
    	android:id="@+id/firstNameText" 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent"
    	android:layout_marginBottom="15dip" />
    	
    <TextView 
    	android:id="@+id/textView2" 
    	android:text="Search by Last Name:" 
    	android:textAppearance="?android:attr/textAppearanceSmall" 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" />
    	
    <EditText 
    	android:id="@+id/lastNameText" 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent"
    	android:layout_marginBottom="15dip" />
    	
    <TextView android:id="@+id/textView3" 
    	android:text="Search by Gender:" 
    	android:textAppearance="?android:attr/textAppearanceSmall" 
    	android:layout_height="wrap_content" 
    	android:layout_width="wrap_content" />
    
    <RadioGroup 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:id="@+id/genderGroup"
    	android:layout_marginBottom="15dip">
    
	    <RadioButton android:text="Male" 
	    	android:id="@+id/male" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" />
	    
	    <RadioButton android:text="Female" 
	    	android:id="@+id/female" 
	    	android:layout_width="wrap_content" 
	    	android:layout_height="wrap_content" />
	</RadioGroup>
	
	<LinearLayout
		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:padding="10dip">
  		
  		<Button android:id="@+id/clear" 
    		android:text="Clear" 
    		android:layout_height="wrap_content" 
    		android:layout_width="wrap_content" />
  		
  		<Button android:id="@+id/filterResults" 
  			android:text="Search" 
  			android:layout_height="wrap_content" 
  			android:layout_width="wrap_content" />
  	</LinearLayout>
	
</LinearLayout>
